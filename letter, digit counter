public static void elementsCount(String str) {
    char [] strChar = str.toCharArray();
    int letters = 0;
    int digits = 0;
    int symbols = 0;

    for (int i = 0; i < strChar.length; i++) {
        if (Character.isLetter(strChar[i])) {
            letters++;
        } else if (Character.isDigit(strChar[i])) {
            digits++;
        } else {
            symbols++;
        }
    } System.out.println("String is : " + str);
System.out.println("Number of letters in string: " + letters);
System.out.println("Number of digits in string: " + digits);
System.out.println("Number of symbols in string: " + symbols);
